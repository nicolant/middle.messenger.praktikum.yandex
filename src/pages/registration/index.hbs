{{!< base}} 

<div class="centered-container">
    <form class="form form-decorated form-registration">
        <div class="column column1">
            <h2>{{registration_form.title}}</h2>
            {{> 'inputfields/inputfields' inputfields=registration_form.inputfields.column1}}
        </div>
        <div class="column column2">
            {{> 'inputfields/inputfields' inputfields=registration_form.inputfields.column2}}
            {{> 'button/button' text=registration_form.submit_label}}
            <a class="link link-block" href="{{registration_form.link.url}}">{{registration_form.link.text}}</a>
        </div>
    </form>
</div>
